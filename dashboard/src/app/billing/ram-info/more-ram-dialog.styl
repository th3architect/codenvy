.more-ram-dialog-content
  margin-top 10px

  .title
    font-size 11pt
    margin-bottom 10px
    margin-top 30px
    color $primary-color

  .value
    border-radius 2px
    max-width 60px
    color $label-secondary-color
    border 1px solid $default-border-color
    padding 7px 10px
    margin 0px 10px
    outline none
    text-align center
    -moz-appearance textfield

  .value::-webkit-inner-spin-button,  .value::-webkit-outer-spin-button
    -webkit-appearance none

  .value:focus
    border-color $primary-color

  .value.ng-invalid
    border-color $error-color

  .buttons-layout
    margin-top 10px

  .error-label
    color $error-color
    height 20px
    margin-top 5px
